@page
@model IdentityServiceClient.Pages.Profile.Edit.NameModel
@{
    ViewData["Title"] = "Update Name";
}

<div class="col-xl-6 col-lg-6 col-md-6">

    <h1 class="display-4">Profile</h1>

    @if (!String.IsNullOrEmpty(ViewData["Message"].ToString()))
    {
        <p class="text-danger" style="margin-top:10px; margin-bottom:5px;"><i style="color:orange; margin-right:2px;" class="fas fa-exclamation-triangle"></i> <strong>@ViewData["Message"]</strong></p>
    }

        <form method="post">

            <!--FirstName-->
            <div class="form-group">
                <label style="font-weight:bold" class="control-label">First Name:</label>
                @if (!ModelState.IsValid && ModelState["NewFirstName"] != null)
                {
                    <input class="form-control border-danger" style="background-color:#ffed81" asp-for="FirstName" placeholder="First Name" />

                    @foreach (var error in ModelState["NewFirstName"].Errors)
                    {
                        <span class="text-danger"><b>@error.ErrorMessage</b></span>
                    }
                    <br />
                }
                else
                {
                    <input class="form-control" asp-for="FirstName" placeholder="First Name" />
                }
            </div>

            <!--LastName-->
            <div class="form-group">
                <label style="font-weight:bold" class="control-label">Last Name:</label>
                @if (!ModelState.IsValid && ModelState["NewLastName"] != null)
                {
                    <input class="form-control border-danger" style="background-color:#ffed81" asp-for="LastName" placeholder="Last Name" />

                    @foreach (var error in ModelState["NewLastName"].Errors)
                    {
                        <span class="text-danger"><b>@error.ErrorMessage</b></span>
                    }
                    <br />
                }
                else
                {
                    <input class="form-control" asp-for="LastName" placeholder="Last Name" />
                }
            </div>
            
            <div class="form-group">
                <a class="btn btn-sm btn-outline-dark" href="~/profile">Cancel</a> <button class="btn btn-sm btn-dark">Update</button>
            </div>

        </form>

</div>
